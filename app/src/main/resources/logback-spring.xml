<configuration debug="true" scan="true">
    <springProfile name="!local-dev">
        <include resource="logback-default.xml"/>
        <include resource="logback-auditlog.xml"/>
        <logger name="AUDIT_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="AUDIT_FILE_LOGGER"/>
        </logger>
    </springProfile>

    <springProfile name="local-dev">
        <include resource="logback-local.xml"/>
        <include resource="logback-auditlog.xml"/>
        <logger name="AUDIT_LOGGER" level="INFO" additivity="false">
            <appender-ref ref="AUDIT_CONSOLE_LOGGER"/>
        </logger>
    </springProfile>
</configuration>
